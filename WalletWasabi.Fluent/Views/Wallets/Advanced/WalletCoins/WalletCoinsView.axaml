<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:walletcoins="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets.Advanced.WalletCoins"
             xmlns:conv="clr-namespace:WalletWasabi.Fluent.Converters"
             x:DataType="walletcoins:WalletCoinsViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Advanced.WalletCoins.WalletCoinsView">
  <c:ContentArea Title="{Binding Title}"
                 EnableNext="True" NextContent="Done"
                 EnableCancel="{Binding EnableCancel}"
                 EnableBack="{Binding EnableBack}">
    <DataBox Items="{Binding Coins}"
             CanUserSortColumns="True">
      <DataBox.Columns>

        <DataBoxTemplateColumn Width="70"
                               CanUserSort="False"
                               Header="">
          <DataBoxTemplateColumn.CellTemplate>
            <DataTemplate>
              <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Spacing="5" x:DataType="walletcoins:WalletCoinViewModel">
                <Panel>
                  <!-- Confirmed -->
                  <PathIcon IsVisible="{Binding Confirmed}"
                            Data="{StaticResource checkmark_filled}"
                            Foreground="{DynamicResource SystemAccentColor}"
                            Height="11"
                            ToolTip.Tip="Confirmed" />
                  <!-- Pending -->
                  <PathIcon IsVisible="{Binding !Confirmed}"
                            Data="{StaticResource clock_regular}"
                            Height="14"
                            Opacity="0.6"
                            ToolTip.Tip="Pending" />
                </Panel>

                <PathIcon IsVisible="{Binding CoinJoinInProgress}"
                          Data="{StaticResource link_filled}"
                          Foreground="{DynamicResource SystemAccentColor}"
                          Height="8"
                          ToolTip.Tip="CoinJoining" />
              </StackPanel>
            </DataTemplate>
          </DataBoxTemplateColumn.CellTemplate>
        </DataBoxTemplateColumn>

        <DataBoxTemplateColumn Width="Auto"
                               CanUserSort="False"
                               Header="Amount">
          <DataBoxTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Amount}" Margin="5 0" VerticalAlignment="Center" x:DataType="walletcoins:WalletCoinViewModel"></TextBlock>
            </DataTemplate>
          </DataBoxTemplateColumn.CellTemplate>
        </DataBoxTemplateColumn>

        <DataBoxTemplateColumn Width="60"
                               CanUserSort="False"
                               Header="Anon">
          <DataBoxTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding AnonymitySet}" Margin="5 0" VerticalAlignment="Center" HorizontalAlignment="Center" x:DataType="walletcoins:WalletCoinViewModel"></TextBlock>
            </DataTemplate>
          </DataBoxTemplateColumn.CellTemplate>
        </DataBoxTemplateColumn>

        <DataBoxTemplateColumn Width="Auto"
                               CanUserSort="False"
                               Header="SmartLabel">
          <DataBoxTemplateColumn.CellTemplate>
            <DataTemplate>
              <c:TagsBox IsReadOnly="True"
                         Margin="5 0"
                         VerticalAlignment="Center"
                         Items="{Binding SmartLabel}"
                         x:DataType="walletcoins:WalletCoinViewModel" />
            </DataTemplate>
          </DataBoxTemplateColumn.CellTemplate>
        </DataBoxTemplateColumn>
      </DataBox.Columns>
    </DataBox>
  </c:ContentArea>
</UserControl>
