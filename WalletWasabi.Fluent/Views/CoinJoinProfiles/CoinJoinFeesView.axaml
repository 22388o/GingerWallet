<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WalletWasabi.Fluent.ViewModels.CoinJoinProfiles"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:conv="using:WalletWasabi.Fluent.Converters"
             xmlns:prof="clr-namespace:WalletWasabi.Fluent.Views.CoinJoinProfiles"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:DataType="vm:CoinJoinProfilesViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.CoinJoinProfiles.CoinJoinFeesView">
  <c:ContentArea Title="{Binding Title}"
                 EnableCancel="{Binding EnableCancel}"
                 EnableBack="{Binding EnableBack}"
                 NextContent="Continue" EnableNext="True"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <DockPanel>
      <TextBlock Text="Wasabi takes care of your financial privacy by automatically coinjoining all your received funds by default. A 0.3% coordinator fee is charged on your receiving amount when you take part in the first coinjoin. You pay only after received amounts, coinjoining the same funds repeatedly DOES NOT incur additional coordinator fees. Amounts under 0.01 BTC DO NOT have to pay either. Furthermore, coordinator fees DO NOT apply if you receive coinjoined funds from other Wasabi Wallet users. Other than this, Bitcoin network fees incur after coinjoins. Note: the more money you're planning to receive, the least significant the network fees are for you." TextWrapping="Wrap" />
    </DockPanel>
  </c:ContentArea>
</UserControl>
