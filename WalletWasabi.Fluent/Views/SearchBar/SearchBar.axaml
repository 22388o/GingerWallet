<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WalletWasabi.Fluent.Views.SearchBar.SearchBar"
             xmlns:searchBar="clr-namespace:WalletWasabi.Fluent.ViewModels.SearchBar"
             xmlns:s="clr-namespace:WalletWasabi.Fluent.Views.SearchBar"
             x:Name="UserControl">

  <Design.DataContext>
    <searchBar:SearchBarDesignViewModel />
  </Design.DataContext>

  <UserControl.Styles>
    <Style Selector="ItemsControl:empty">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <TextBlock Margin="10">No results</TextBlock>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Styles>

  <Panel>
    <TextBox x:Name="SearchBox" DockPanel.Dock="Top" Text="{Binding SearchText, Mode=TwoWay}" />
    <Popup x:Name="Popup" IsLightDismissEnabled="True" IsOpen="{Binding #UserControl.IsKeyboardFocusWithin}"
           PlacementTarget="{Binding #SearchBox}">
      <s:SearchBarDropdown MaxHeight="500" />
    </Popup>
  </Panel>
</UserControl>