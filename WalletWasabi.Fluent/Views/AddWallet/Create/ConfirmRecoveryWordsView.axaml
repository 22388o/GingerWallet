<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:WalletWasabi.Fluent.Behaviors"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:create="using:WalletWasabi.Fluent.ViewModels.AddWallet.Create"
             xmlns:validation="clr-namespace:WalletWasabi.Fluent.Validation"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:DataType="create:ConfirmRecoveryWordsViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.AddWallet.Create.ConfirmRecoveryWordsView">
  <c:ContentArea Title="{Binding Title}"
                 Caption="Click the recovery words in the correct order."
                 EnableCancel="{Binding EnableCancel}"
                 EnableBack="{Binding EnableBack}"
                 EnableNext="True" NextContent="Continue"
                 EnableSkip="{Binding IsSkipEnable}"
                 IsBusy="{Binding IsBusy}"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <DockPanel>
      <ItemsControl Items="{Binding AvailableWords}" DockPanel.Dock="Top" Margin="30 10 30 0">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <CheckBox IsChecked="{Binding IsSelected}">
              <CheckBox.Styles>
                <Style Selector="CheckBox[IsChecked=True] /template/ c|TagControl">
                  <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
                  <Setter Property="Foreground" Value="{DynamicResource ActionButtonForegroundColor}" />
                </Style>
              </CheckBox.Styles>
              <CheckBox.Template>
                <ControlTemplate>
                  <c:TagControl DataContext="{Binding Word}" Content="{Binding .}" x:Name="Tag" />
                </ControlTemplate>
              </CheckBox.Template>
            </CheckBox>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Panel>
          <ItemsControl Items="{Binding ConfirmationWords}" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="ItemsControl" Margin="0 10 0 0">
            <ItemsControl.Styles>
              <Style Selector="TextBlock">
                <Setter Property="FontSize" Value="{DynamicResource FontSizeH6}" />
                <Setter Property="Height" Value="42" />
              </Style>
            </ItemsControl.Styles>
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel MaxHeight="252" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="50 0 50 0" Width="80">
                  <TextBlock Text="{Binding Index, Mode=OneWay, StringFormat={}{0}.}" Opacity="0.5" />
                  <TextBlock Text="{Binding SelectedWord}" FontWeight="SemiBold" Margin="5 0 0 0" IsVisible="{Binding IsConfirmed}" />
                  <TextBlock Text="{Binding SelectedWord}" FontWeight="SemiBold" Margin="5 0 0 0" Foreground="IndianRed" IsVisible="{Binding !IsConfirmed}" />
                </StackPanel>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

          <Panel HorizontalAlignment="Center" VerticalAlignment="Center"
                 Width="{Binding #ItemsControl.Bounds.Width}"
                 Height="{Binding #ItemsControl.Bounds.Height}">
            <Separator Classes="vertical" Margin="0 0 0 20" />
          </Panel>
        </Panel>
      </ScrollViewer>
    </DockPanel>
  </c:ContentArea>
</UserControl>
