<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <Border Width="200" Height="300">
      <SplitButton Content="Split Button" VerticalAlignment="Center" HorizontalAlignment="Center">
        <SplitButton.Flyout>
          <Flyout>
            <TextBlock>Hi</TextBlock>
          </Flyout>
        </SplitButton.Flyout>
      </SplitButton>
    </Border>
  </Design.PreviewWith>

  <Style Selector=":is(SplitButton)">
    <Setter Property="Background" Value="{DynamicResource ActionButtonBackgroundColor}" />
  </Style>

  <Style Selector=":is(SplitButton) PathIcon">
    <Setter Property="Foreground" Value="{DynamicResource ActionButtonForegroundColor}" />
  </Style>

  <Style Selector=":is(SplitButton)">
    <Setter Property="TextElement.Foreground" Value="{DynamicResource ActionButtonForegroundColor}" />
  </Style>

  <Style Selector=":is(SplitButton) Button:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource ActionButtonPointerOverBackgroundColor}" />
    <Setter Property="TextElement.Foreground" Value="{DynamicResource ActionButtonForegroundColor}" />
  </Style>

  <Style Selector=":is(SplitButton) Button:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource ActionButtonPressedBackgroundColor}" />
  </Style>

  <Style Selector=":is(SplitButton) Button:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource ActionButtonDisabledBackgroundColor}" />
  </Style>

  <Style Selector=":is(SplitButton) Button[Tag=flyout-open] /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource ActionButtonPressedBackgroundColor}" />
    <Setter Property="BorderBrush" Value="{DynamicResource ActionButtonPressedBackgroundColor}" />
    <Setter Property="Foreground" Value="{DynamicResource ActionButtonForegroundColor}" />
  </Style>

</Styles>
